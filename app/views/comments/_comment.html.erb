<article>
    <small>
        <strong>
            by: <%= comment.user.email %> <%= time_ago_in_words(comment.created_at, include_seconds: true)+" ago" %>
        </strong>
    </small>
    
    <p>
        <%= comment.content %>
    </p>
    <a href="#" class="comment-form-display">Reply</a>
    <div class = "comment-form">
        <%= render partial: 'comments/form',locals: { blog: comment.blog, parent: comment}%>
    </div>
    <hr/>
    <div class="sub-comment">
        <%= render comment.comments.order(id: :desc) %>
    </div>
</article>

<script>
document.querySelectorAll('.comment-form-display').forEach((el)=>{
    el.addEventListener('click',(ev)=>{
        ev.preventDefault();
        el.nextElementSibling.style = 'display:block';
    })
})
</script>
